	"version": "0.2.0",
	"configurations": [
		{
			"name": "(lldb) checker",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/checker",
			"args": ["-v", "0 1"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode": "lldb"
		},
		{
			"name": "(lldb) push_swap",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/push_swap",
			"args": ["-h", "2", "1"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"internalConsoleOptions": "openOnFirstSessionStart",
			"MIMode": "lldb"
		}
	]
}